<Window x:Class="MyTimeline.prueba"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTimeline"
        mc:Ignorable="d"
        Title="prueba" Height="450" Width="800">
    
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--Contenido principal de la ventana va en la primera fila y primera columna-->
            <Border Width="300" Height="100" Grid.Row="0" Grid.Column="0" Background="LightGray">
                <TextBlock Text="Contenido principal" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
            <!--Botón que estará en la esquina superior derecha-->
            <Button Grid.Row="1" Grid.Column="1" Content="X" Width="120" Height="20" Margin="5"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"  />
        </Grid>
    
</Window>
